<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="30" status="WARN">

  <!-- Logging Properties -->
  <Appenders>

    <!-- Console Appender -->
    <Console follow="true" name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="${LOG_PATTERN}"/>
    </Console>

    <!-- File Appenders on need basis -->
    <RollingFile fileName="${APP_LOG_ROOT}/app-framework.log" filePattern="${APP_LOG_ROOT}/app-framework-%d{yyyy-MM-dd}-%i.log"
      name="frameworkLog">
      <DefaultRolloverStrategy max="10"/>
      <LevelRangeFilter maxLevel="ERROR" minLevel="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
      <PatternLayout pattern="${LOG_PATTERN}"/>
      <Policies>
        <SizeBasedTriggeringPolicy size="10MB"/>
      </Policies>
    </RollingFile>

    <RollingFile fileName="${APP_LOG_ROOT}/app-debug.log" filePattern="${APP_LOG_ROOT}/app-debug-%d{yyyy-MM-dd}-%i.log"
      name="debugLog">
      <DefaultRolloverStrategy max="10"/>
      <LevelRangeFilter maxLevel="DEBUG" minLevel="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
      <PatternLayout pattern="${LOG_PATTERN}"/>
      <Policies>
        <SizeBasedTriggeringPolicy size="10MB"/>
      </Policies>
    </RollingFile>

    <RollingFile fileName="${APP_LOG_ROOT}/app-info.log" filePattern="${APP_LOG_ROOT}/app-info-%d{yyyy-MM-dd}-%i.log"
      name="infoLog">
      <DefaultRolloverStrategy max="10"/>
      <LevelRangeFilter maxLevel="INFO" minLevel="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
      <PatternLayout pattern="${LOG_PATTERN}"/>
      <Policies>
        <SizeBasedTriggeringPolicy size="10MB"/>
      </Policies>
    </RollingFile>

    <RollingFile fileName="${APP_LOG_ROOT}/app-error.log" filePattern="${APP_LOG_ROOT}/app-error-%d{yyyy-MM-dd}-%i.log"
      name="errorLog">
      <DefaultRolloverStrategy max="10"/>
      <LevelRangeFilter maxLevel="ERROR" minLevel="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
      <PatternLayout pattern="${LOG_PATTERN}"/>
      <Policies>
        <SizeBasedTriggeringPolicy size="10MB"/>
      </Policies>
    </RollingFile>

    <RollingFile fileName="${APP_LOG_ROOT}/app-perf.log" filePattern="${APP_LOG_ROOT}/app-perf-%d{yyyy-MM-dd}-%i.log"
      name="perfLog">
      <DefaultRolloverStrategy max="1"/>
      <PatternLayout pattern="${LOG_PATTERN}"/>
      <Policies>
        <SizeBasedTriggeringPolicy size="10MB"/>
      </Policies>
    </RollingFile>

    <RollingFile fileName="${APP_LOG_ROOT}/app-trace.log" filePattern="${APP_LOG_ROOT}/app-trace-%d{yyyy-MM-dd}-%i.log"
      name="traceLog">
      <DefaultRolloverStrategy max="1"/>
      <PatternLayout pattern="${LOG_PATTERN}"/>
      <Policies>
        <SizeBasedTriggeringPolicy size="10MB"/>
      </Policies>
    </RollingFile>

  </Appenders>

  <Loggers>

    <!--    <Logger name="com.clinic.dao" additivity="false" level="debug">-->
    <!--      <AppenderRef ref="traceLog" />-->
    <!--      <AppenderRef ref="Console" />-->
    <!--    </Logger>-->

    <Logger additivity="false" level="debug" name="com.clinic">
      <AppenderRef ref="debugLog"/>
      <AppenderRef ref="infoLog"/>
      <AppenderRef ref="errorLog"/>
      <AppenderRef ref="Console"/>
    </Logger>

    <!--    <Logger name="org.framework.package" additivity="false" level="info">-->
    <!--      <AppenderRef ref="perfLog" />-->
    <!--      <AppenderRef ref="Console"/>-->
    <!--    </Logger>-->

    <Root level="warn">
      <AppenderRef ref="Console"/>
    </Root>

  </Loggers>

  <Properties>
    <Property name="LOG_PATTERN">%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} %p %m%n</Property>
    <Property name="APP_LOG_ROOT">c:/temp/logs</Property>
  </Properties>

</Configuration>